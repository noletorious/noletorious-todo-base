datasource db {
  provider     = "postgresql"
  relationMode = "foreignKeys"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id // matches Supabase Auth UUID
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  stripeCustomerId String? @unique
  isPremium        Boolean @default(false)
  
  todos     Todo[]
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String   @default("BACKLOG") // BACKLOG, TODO, IN_PROGRESS, DONE
  label       String?  // "Bug", "Feature", etc.
  priority    String?  // "Low", "Medium", "High"
  dueDate     DateTime?
  imageUrl    String?
  order       Float    @default(0) // For drag and drop ranking
  
  completed   Boolean  @default(false) // New field
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
